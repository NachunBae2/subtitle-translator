{
  "name": "subtitle-translator",
  "productName": "자막 번역기",
  "private": true,
  "version": "0.2.6",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite --port 3003",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "NODE_ENV=development electron .",
    "electron:dev": "concurrently \"npm run dev\" \"sleep 3 && NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "tauri": "tauri"
  },
  "build": {
    "appId": "com.ruler.subtitle-translator",
    "productName": "자막 번역기",
    "artifactName": "${productName}_${version}_${arch}.${ext}",
    "files": [
      "dist/index.html",
      "dist/assets/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": "x64"
        }
      ]
    }
  },
  "dependencies": {
    "gpt-tokenizer": "^2.1.2",
    "lucide-react": "^0.562.0",
    "openai": "^4.20.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.6.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@tauri-apps/api": "^1.5.3",
    "@tauri-apps/cli": "1.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^9.2.1",
    "electron": "^25.0.0",
    "electron-builder": "^26.4.0",
    "isbinaryfile": "^5.0.7",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  }
}
